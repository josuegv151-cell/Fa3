Sub Liavisos()

    Dim ws As Worksheet
    Dim ultimaFila As Long

 ' Limpiar hoja TABLA

    Set ws = ThisWorkbook.Sheets("Sheet1")

    ultimaFila = ws.Cells(ws.Rows.Count, 1).End(xlUp).Row

    If ultimaFila >= 2 Then

        ws.Range("A2:C" & ultimaFila).ClearContents
        ws.Range("A2:C" & ultimaFila).Interior.ColorIndex = xlNone

    End If

    ws.Range("A2:C30").Font.Name = "Calibri"
    ws.Range("A2:C30").Font.Size = 11
   
End Sub

Sub ImprimirAvisos()

    Dim Ruta As String
    Dim Archivo As String
    Dim aviso As String
    Dim ultimaFila As Long
    Dim ws As Worksheet
    Dim i As Long

    Set ws = ThisWorkbook.Sheets("Sheet1")

    ultimaFila = ws.Cells(ws.Rows.Count, 1).End(xlUp).Row

    ' Carpeta donde están los archivos
    Ruta = "Y:\Avisos\tiffiles\"

       For i = 2 To ultimaFila

    aviso = Trim(CStr(ws.Cells(i, 1).Value))

    If aviso <> "" Then

        ' Buscar solo el archivo que coincide con el nombre de la celda
        Archivo = Ruta & aviso & ".pdf"

        If Archivo <> "" Then

            Shell "cmd /c start """" /min /wait """ & Archivo & """ /p", vbHide
        Else
            MsgBox "No se encontró el archivo: " & Ruta & aviso & ".pdf"

        End If

    End If

Next i

End Sub
